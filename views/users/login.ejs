<% layout("/layouts/boilerPlate") %>

<div class="row mt-5">
    <h1 class="col-6 offset-3" style="text-align: center;">Login on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-4 mt-3">
                <label for="username" class="form-label" hidden>Username</label>
                <input name="username" class="form-control" type="text" id="username" placeholder="Enter username" required>
            </div>
            <div class="mb-4">
                <label for="password" class="form-label" hidden>Password</label>
                <input name="password" class="form-control" type="password" id="password" placeholder="Enter password" required>
            </div>
            <button type="submit" class="btn btn-success">Login</button>
        </form>
    </div>
</div>