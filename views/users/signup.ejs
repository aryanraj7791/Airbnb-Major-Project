<% layout("/layouts/boilerPlate") %>
<div class="row mt-5">
    <h1 class="col-6 offset-3" style="text-align: center;">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/signup" class="needs-validation" novalidate>
            <div class="mb-4 mt-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" class="form-control" type="text" id="username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-4">
                <label for="email" class="form-label">Email</label>
                <input name="email" class="form-control" type="text" id="email" required>
            </div>
            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <input name="password" class="form-control" type="password" id="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button type="submit" class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>